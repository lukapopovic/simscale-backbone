<div class="container-fluid">
    <div class="row">
        {{each project}}
            <div class="project-item">
                <img class="project-thumbnail" src="{{resultThumbnail}}">
                <div class="project-info">
                    <div class="user-info">
                        <img class="user-avatar" src="assets/avatar.jpeg">
                        <span class="project-name" title="{{project.projectName}}">{{project.projectName}}</span><br>
                        <span class="owner-name">by {{project.ownerName}}</span><br>
                    </div>
                    <span class="statistics">{{project.numberOfGeometries}} CAD Models&nbsp;/&nbsp;{{project.numberOfMeshes}} Meshes&nbsp;/&nbsp;{{project.numberOfSimulations}} Simulations</span>
                </div>
                <hr>
                <div class="project-additional-info">
                    <span class="changed" >{{resultDate}}</span>
                    <div class="icons">
                        <span class="fa fa-eye"></span><span>{{project.numberOfViews}}</span>
                        <span class="fa fa-heart"></span><span>{{project.numberOfLikes}}</span>
                        <span class="fa fa-code-fork"></span><span>{{project.numberOfCopies}}</span>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>